<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Thenewyorktimes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/text_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_color</item>
        <item name="colorSecondaryVariant">@color/text_color</item>
        <item name="colorOnSecondary">@color/text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="bottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="fontFamily">@font/thenewyorktimes</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DatePickerDialogTheme_Primary" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="DatePickerDialogTheme_Green" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/text_color</item>
    </style>
    <style name="Theme.Thenewyorktimes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Thenewyorktimes.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Thenewyorktimes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.TabsFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/thenewyorktimes</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:elevation">20dp</item>
        <item name="submitBackground">@color/text_color</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>
</resources>